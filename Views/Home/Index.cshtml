<!DOCTYPE html>
<html lang="en">
<body>
    <div class="container-fluid">
        <h1 class="mb-4 text-dark">
            <i class="fas fa-fw fa-tachometer-alt text-primary me-2"></i> Dashboard
        </h1>
        <p class="text-muted mb-5">
            Welcome, 
            <span class="badge bg-secondary" id="userRole">Manager</span>.
        </p>
        
        <div class="row">
            <!-- === WIDGET 1: PENDING CHECK-INS (High Priority) === -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs text-primary text-uppercase mb-1">
                                    Today's Check-ins
                                </div>
                                <div class="h5 mb-0 fw-bold text-gray-800">0</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-door-open fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer p-1">
                        <a href="#" class="small text-primary text-decoration-none d-block">
                            View Details &rarr;
                        </a>
                    </div>
                </div>
            </div>

            <!-- === WIDGET 2: AVAILABLE UNITS (Inventory Status) === -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs text-success text-uppercase mb-1">
                                    Available Units
                                </div>
                                <div class="h5 mb-0 fw-bold text-gray-800">@Model.Rooms.Count()</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-home fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer p-1">
                        <a asp-controller="Rooms" asp-action="index" class="small text-success text-decoration-none d-block">
                            Manage Inventory &rarr;
                        </a>
                    </div>
                </div>
            </div>

            <!-- === WIDGET 3: OVERDUE PAYMENTS (Manager/Owner View) === -->
            <div class="col-xl-3 col-md-6 mb-4" id="widget-overdue">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs text-danger text-uppercase mb-1">
                                    Overdue Payments
                                </div>
                                <div class="h5 mb-0 fw-bold text-gray-800">R0.00</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer p-1">
                        <a href="#" class="small text-danger text-decoration-none d-block">
                            View Invoices &rarr;
                        </a>
                    </div>
                </div>
            </div>

            <!-- === WIDGET 4: NEW LEASE REQUESTS (Manager/Owner View) === -->
            <div class="col-xl-3 col-md-6 mb-4" id="widget-leases">
                 <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs text-info text-uppercase mb-1">
                                    New Lease Requests
                                </div>
                                <div class="h5 mb-0 fw-bold text-gray-800">0</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-file-alt fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer p-1">
                        <a href="#" class="small text-info text-decoration-none d-block">
                            Review Applications &rarr;
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- === SECOND ROW: CHARTS AND ACTIVITY FEED === -->
        <div class="row">
            <!-- Area Chart: Monthly Bookings/Revenue (Manager/Owner only) -->
            <div class="col-xl-8 col-lg-7 mb-4" id="chart-area-container">
                <div class="card shadow">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 fw-bold text-primary">Monthly Booking Trend (Short Stays)</h6>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small">A visual trend of confirmed short-stay bookings over the last 6 months.</p>
                        <div class="chart-area">
                            <canvas id="bookingAreaChart"></canvas> 
                        </div>
                    </div>
                </div>
            </div>

            <!-- Activity Feed / Quick Links (For all staff) -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 fw-bold text-primary">Quick Links & Actions</h6>
                    </div>
                    <div class="card-body">
                        <a asp-controller="Rooms" asp-action="Onboard" class="btn btn-primary btn-lg w-100 mb-3 rounded-pill shadow-sm">
                            <i class="fas fa-plus me-2"></i> Create New Booking
                        </a>
                        <a href="#" class="btn btn-info btn-lg w-100 mb-4 rounded-pill shadow-sm">
                            <i class="fas fa-wrench me-2"></i> Log Maintenance Issue
                        </a>
                        <div class="mt-3 p-3 border rounded">
                            <h6 class="fw-bold text-secondary border-bottom pb-2">Recent System Activity</h6>
                            <ul class="list-group list-group-flush small">
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span class="text-truncate">**Admin** updated Unit B-201 status.</span>
                                    <span class="text-muted ms-2">2 mins ago</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span class="text-truncate">**Jane Doe** approved invoice #4321.</span>
                                    <span class="text-muted ms-2">1 hour ago</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span class="text-truncate">New long-term application submitted.</span>
                                    <span class="text-muted ms-2">4 hours ago</span>
                                </li>
                            </ul>
                            <div class="text-center mt-3">
                                <a href="#" class="small text-decoration-none">View Full Log &rarr;</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js for visualization -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <script>
        // --- Simulation of user data and role check ---
        const currentUser = {
            name: "Jane Doe",
            role: "Manager" // Change this to "Staff" to see which elements should hide (though they are visible by default here)
        };
        const isManagerOrOwner = currentUser.role === "Manager" || currentUser.role === "Owner";

        document.getElementById('userName').textContent = currentUser.name;
        document.getElementById('userRole').textContent = currentUser.role;

        // Hide manager-only elements if not a manager/owner
        if (!isManagerOrOwner) {
            document.getElementById('widget-overdue')?.remove();
            document.getElementById('widget-leases')?.remove();
            document.getElementById('chart-area-container')?.remove();
            
            // Adjust the layout of the remaining quick links column for a full 12-column width
            const quickLinks = document.querySelector('.col-xl-4.col-lg-5');
            if (quickLinks) {
                quickLinks.classList.remove('col-xl-4', 'col-lg-5');
                quickLinks.classList.add('col-12');
            }
        }

        // --- Chart.js Initialization ---
        document.addEventListener('DOMContentLoaded', function() {
            var ctx = document.getElementById('bookingAreaChart');
            
            // Only initialize the chart if the element exists (i.e., if the user is Manager/Owner)
            if (ctx) {
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                        datasets: [{
                            label: "Bookings",
                            data: [180, 210, 195, 230, 220, 250],
                            backgroundColor: 'rgba(78, 115, 223, 0.1)',
                            borderColor: '#4e73df',
                            pointRadius: 3,
                            pointBackgroundColor: '#4e73df',
                            pointBorderColor: '#fff',
                            pointHoverRadius: 3,
                            pointHoverBackgroundColor: '#4e73df',
                            pointHoverBorderColor: 'rgba(78, 115, 223, 1)',
                            tension: 0.4,
                            fill: true,
                        }]
                    },
                    options: {
                       responsive: true,
                       maintainAspectRatio: false,
                       plugins: {
                            legend: { display: false }
                       },
                       scales: {
                           x: { grid: { display: false } },
                           y: { beginAtZero: true, ticks: { maxTicksLimit: 5 } }
                       }
                    }
                });
            }
        });
    </script>
</body>
</html>
}
