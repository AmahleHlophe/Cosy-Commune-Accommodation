    <main class="max-w-6xl mx-auto px-4 pt-2 pb-24 md:pt-24">
        <!-- Welcome Header -->
        <header class="mb-10">
            <h1 class="text-3xl font-black text-slate-900">Hello, @User.Identity?.Name ðŸ‘‹</h1>
            <p class="text-slate-500 font-medium">Unit 305 â€¢ <span class="text-emerald-600">Lease Active</span></p>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            
            <!-- Left Column: Primary Actions -->
            <div class="lg:col-span-2 space-y-8">
                
                <!-- Rent Status Card -->
                <section class="bg-indigo-900 rounded-[2.5rem] p-8 text-white relative overflow-hidden shadow-2xl shadow-indigo-200">
                    <div class="relative z-10">
                        <div class="flex justify-between items-start mb-6">
                            <div>
                                <p class="text-indigo-200 text-xs font-bold uppercase tracking-widest mb-1">Upcoming Rent</p>
                                <h2 class="text-4xl font-black">R 8,500.00</h2>
                            </div>
                            <span class="bg-indigo-500/30 border border-indigo-400/30 px-4 py-2 rounded-full text-xs font-bold">Due in 4 Days</span>
                        </div>
                        <div class="flex gap-4">
                            <button class="bg-white text-indigo-900 px-6 py-3 rounded-2xl font-bold flex items-center gap-2 hover:bg-indigo-50 transition-all">
                                <i class="fa-solid fa-wallet"></i> Pay Now
                            </button>
                            <button class="bg-indigo-800 text-white px-6 py-3 rounded-2xl font-bold border border-indigo-700 hover:bg-indigo-700 transition-all">
                                View Statement
                            </button>
                        </div>
                    </div>
                    <!-- Decorative Circle -->
                    <div class="absolute -right-20 -top-20 w-64 h-64 bg-indigo-500 rounded-full opacity-20 blur-3xl"></div>
                </section>

                <!-- Action Grid -->
                <section class="grid grid-cols-2 md:grid-cols-3 gap-4">
                    <a href="/Maintenance/LogMaintenanceFlow" class="action-card bg-white p-6 rounded-3xl border border-slate-200 shadow-sm flex flex-col items-center text-center gap-3 hover:border-indigo-500 transition-all">
                        <div class="w-12 h-12 bg-amber-50 text-amber-600 rounded-2xl flex items-center justify-center text-xl">
                            <i class="fa-solid fa-screwdriver-wrench"></i>
                        </div>
                        <span class="font-bold text-sm text-slate-700">Log Issue</span>
                    </a>

                    <a href="#" class="action-card bg-white p-6 rounded-3xl border border-slate-200 shadow-sm flex flex-col items-center text-center gap-3 hover:border-indigo-500 transition-all">
                        <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-2xl flex items-center justify-center text-xl">
                            <i class="fa-solid fa-calendar-check"></i>
                        </div>
                        <span class="font-bold text-sm text-slate-700">Book Facility</span>
                    </a>

                    <a href="#" class="action-card bg-white p-6 rounded-3xl border border-slate-200 shadow-sm flex flex-col items-center text-center gap-3 hover:border-indigo-500 transition-all">
                        <div class="w-12 h-12 bg-purple-50 text-purple-600 rounded-2xl flex items-center justify-center text-xl">
                            <i class="fa-solid fa-file-contract"></i>
                        </div>
                        <span class="font-bold text-sm text-slate-700">My Lease</span>
                    </a>

                    <a href="#" class="action-card bg-white p-6 rounded-3xl border border-slate-200 shadow-sm flex flex-col items-center text-center gap-3 hover:border-indigo-500 transition-all">
                        <div class="w-12 h-12 bg-slate-50 text-slate-600 rounded-2xl flex items-center justify-center text-xl">
                            <i class="fa-solid fa-boxes-packing"></i>
                        </div>
                        <span class="font-bold text-sm text-slate-700">Storage</span>
                    </a>

                    <a href="#" class="action-card bg-white p-6 rounded-3xl border border-slate-200 shadow-sm flex flex-col items-center text-center gap-3 hover:border-indigo-500 transition-all">
                        <div class="w-12 h-12 bg-emerald-50 text-emerald-600 rounded-2xl flex items-center justify-center text-xl">
                            <i class="fa-solid fa-user-group"></i>
                        </div>
                        <span class="font-bold text-sm text-slate-700">Community</span>
                    </a>

                    <a href="#" class="action-card bg-rose-50 p-6 rounded-3xl border border-rose-100 shadow-sm flex flex-col items-center text-center gap-3 hover:bg-rose-100 transition-all">
                        <div class="w-12 h-12 bg-white text-rose-600 rounded-2xl flex items-center justify-center text-xl shadow-sm">
                            <i class="fa-solid fa-door-open"></i>
                        </div>
                        <span class="font-bold text-sm text-rose-700">Checkout</span>
                    </a>
                </section>

                <!-- Maintenance Feed -->
                <section>
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="font-bold text-xl">Active Maintenance</h3>
                        <a href="/Maintenance/Index" class="text-indigo-600 text-sm font-bold">View History</a>
                    </div>
                    <div class="space-y-3">
                        <div class="bg-white p-4 rounded-2xl border border-slate-200 flex items-center justify-between">
                            <div class="flex items-center gap-4">
                                <div class="w-10 h-10 bg-slate-100 rounded-xl flex items-center justify-center text-slate-500">
                                    <i class="fa-solid fa-bolt"></i>
                                </div>
                                <div>
                                    <p class="font-bold text-sm">Bedroom Light Flicker</p>
                                    <p class="text-xs text-slate-400">Assigned: Tech John D.</p>
                                </div>
                            </div>
                            <span class="px-3 py-1 bg-amber-100 text-amber-700 rounded-full text-[10px] font-black uppercase tracking-widest">In Progress</span>
                        </div>
                    </div>
                </section>
            </div>

            <!-- Right Column: Info & Perks -->
            <div class="space-y-8">
                <!-- Smart Home Integration (Upsell/Extra) -->
                <div class="bg-white rounded-[2.5rem] p-8 border border-slate-200 shadow-sm">
                    <h3 class="font-bold text-lg mb-4">Unit Controls</h3>
                    <div class="space-y-4">
                        <div class="flex justify-between items-center p-4 bg-slate-50 rounded-2xl">
                            <div class="flex items-center gap-3">
                                <i class="fa-solid fa-temperature-half text-indigo-600"></i>
                                <span class="font-bold text-sm">Thermostat</span>
                            </div>
                            <span class="text-sm font-black">22Â°C</span>
                        </div>
                        <div class="flex justify-between items-center p-4 bg-slate-50 rounded-2xl">
                            <div class="flex items-center gap-3">
                                <i class="fa-solid fa-shield-halved text-emerald-600"></i>
                                <span class="font-bold text-sm">Main Door</span>
                            </div>
                            <span class="text-xs font-bold text-emerald-600">Locked</span>
                        </div>
                    </div>
                </div>

                <!-- Community Notices -->
                <div class="bg-indigo-50 rounded-[2.5rem] p-8 border border-indigo-100">
                    <h3 class="font-bold text-indigo-900 mb-4">Commune Notices</h3>
                    <div class="space-y-6">
                        <div class="relative pl-6">
                            <div class="absolute left-0 top-1 w-1.5 h-1.5 bg-indigo-600 rounded-full"></div>
                            <p class="text-sm font-bold text-indigo-950">Elevator Maintenance</p>
                            <p class="text-xs text-indigo-600/70">Planned for Friday 10:00 - 14:00</p>
                        </div>
                        <div class="relative pl-6">
                            <div class="absolute left-0 top-1 w-1.5 h-1.5 bg-indigo-600 rounded-full"></div>
                            <p class="text-sm font-bold text-indigo-950">Rooftop Braai Night</p>
                            <p class="text-xs text-indigo-600/70">Join us this Saturday at 18:00!</p>
                        </div>
                    </div>
                    <button class="w-full mt-6 py-3 bg-indigo-600 text-white rounded-xl font-bold text-sm hover:bg-indigo-700 transition-all">
                        View All Notices
                    </button>
                </div>

                <!-- Quick Support -->
                <div class="bg-slate-900 rounded-[2.5rem] p-8 text-white">
                    <h3 class="font-bold text-lg mb-2">Need Help?</h3>
                    <p class="text-slate-400 text-xs mb-6">Our concierge is available 24/7 for emergencies.</p>
                    <button class="w-full py-4 bg-white/10 border border-white/10 rounded-2xl font-bold text-sm hover:bg-white/20 transition-all flex items-center justify-center gap-2">
                        <i class="fa-solid fa-headset"></i> Contact Support
                    </button>
                </div>
            </div>

        </div>
    </main>

    <!-- Modal Mockup for Checkout (Hidden by default) -->
    <div id="checkoutModal" class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm hidden z-[100] items-center justify-center p-4">
        <div class="bg-white rounded-[3rem] p-10 max-w-md w-full shadow-2xl">
            <div class="w-20 h-20 bg-rose-50 text-rose-600 rounded-full flex items-center justify-center text-3xl mx-auto mb-6">
                <i class="fa-solid fa-door-open"></i>
            </div>
            <h3 class="text-2xl font-black text-center text-slate-900 mb-2">Initiate Checkout?</h3>
            <p class="text-slate-500 text-center text-sm mb-8 leading-relaxed">
                This will start your lease termination process. You will need to book a move-out inspection and clear all outstanding balances.
            </p>
            <div class="space-y-3">
                <button class="w-full py-4 bg-rose-600 text-white rounded-2xl font-bold hover:bg-rose-700 transition-all">Start Checkout Process</button>
                <button onclick="toggleCheckout()" class="w-full py-4 bg-slate-100 text-slate-500 rounded-2xl font-bold hover:bg-slate-200 transition-all">Maybe Later</button>
            </div>
        </div>
    </div>

    <script>
        function toggleCheckout() {
            const modal = document.getElementById('checkoutModal');
            modal.classList.toggle('hidden');
            modal.classList.toggle('flex');
        }

        // Connect the checkout button to the modal
        document.querySelectorAll('.action-card').forEach(card => {
            if(card.innerText.includes('Checkout')) {
                card.onclick = (e) => {
                    e.preventDefault();
                    toggleCheckout();
                }
            }
        });
    </script>
</body>
</html>