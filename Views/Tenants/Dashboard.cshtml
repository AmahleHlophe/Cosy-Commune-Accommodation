@* @{
    Layout = null;
} *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tenant Portal | Cosy Commune</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-slate-50 text-slate-900 min-h-screen pb-20">

    <!-- Global Navigation -->
    @* <nav class="fixed bottom-0 w-full bg-white/80 backdrop-blur-md border-t border-slate-200 px-8 py-4 flex justify-between items-center z-50 md:top-0 md:bottom-auto md:border-b md:border-t-0">
        <div class="flex items-center gap-2 cursor-pointer" onclick="showView('main-dashboard')">
            <div class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center text-white shadow-lg">
                <i class="fa-solid fa-house-user text-xs"></i>
            </div>
            <span class="font-black text-slate-800 tracking-tight hidden md:block">Cosy Commune</span>
        </div>
        <div class="flex gap-10">
            <button onclick="showView('main-dashboard')" class="nav-item tab-active" id="nav-home"><i class="fa-solid fa-grid-2 text-xl"></i></button>
            <button class="text-slate-400 hover:text-indigo-600 transition-colors"><i class="fa-solid fa-message text-xl"></i></button>
            <button class="text-slate-400 hover:text-indigo-600 transition-colors"><i class="fa-solid fa-user text-xl"></i></button>
        </div>
    </nav> *@

    <!-- MAIN DASHBOARD -->
    <div id="main-dashboard" class="view-panel active max-w-5xl mx-auto px-6 pt-5 md:pt-28">
        <header class="mb-8">
            <h1 class="text-3xl font-black text-slate-900">Welcome Home, @User.Identity?.Name</h1>
            <p class="text-slate-500 font-medium"> • Unit 402</p>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 space-y-6">
                <div class="bg-indigo-950 rounded-[2.5rem] p-8 text-white shadow-2xl shadow-indigo-200 relative overflow-hidden">
                    <div class="relative z-10 flex justify-between items-center">
                        <div>
                            <p class="text-indigo-300 text-[10px] font-black uppercase tracking-widest mb-1">Balance Due</p>
                            <h2 class="text-4xl font-black">R 8,500.00</h2>
                            <p class="text-indigo-400 text-xs mt-2">Next payment: 1st Jan 2026</p>
                        </div>
                        <button onclick="showView('rent-flow')" class="bg-white text-indigo-950 px-6 py-4 rounded-2xl font-black text-sm hover:scale-105 transition-transform shadow-xl">
                            Pay Rent
                        </button>
                    </div>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                    <a href="/Maintenance/Dashboard" class="p-6 bg-white border border-slate-200 rounded-[2rem] flex flex-col items-center gap-3 hover:border-indigo-500 transition-all group">
                        <div class="w-12 h-12 bg-orange-50 text-orange-600 rounded-2xl flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                            <i class="fa-solid fa-screwdriver-wrench"></i>
                        </div>
                        <span class="font-bold text-sm">Log Issue</span>
                    </a>
                    
                    <a asp-controller="Facility" asp-action="Create" class="p-6 bg-white border border-slate-200 rounded-[2rem] flex flex-col items-center gap-3 hover:border-indigo-500 transition-all group">
                        <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-2xl flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                            <i class="fa-solid fa-calendar-check"></i>
                        </div>
                        <span class="font-bold text-sm">Book Facility</span>
                    </a>

                    <button onclick="showView('lease-flow')" class="p-6 bg-white border border-slate-200 rounded-[2rem] flex flex-col items-center gap-3 hover:border-indigo-500 transition-all group">
                        <div class="w-12 h-12 bg-purple-50 text-purple-600 rounded-2xl flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                            <i class="fa-solid fa-file-contract"></i>
                        </div>
                        <span class="font-bold text-sm">My Lease</span>
                    </button>

                    <button onclick="showView('checkout-flow')" class="p-6 bg-rose-50 border border-rose-100 rounded-[2rem] flex flex-col items-center gap-3 hover:bg-rose-100 transition-all group">
                        <div class="w-12 h-12 bg-white text-rose-600 rounded-2xl flex items-center justify-center text-xl shadow-sm group-hover:scale-110 transition-transform">
                            <i class="fa-solid fa-door-open"></i>
                        </div>
                        <span class="font-bold text-sm text-rose-700">Checkout</span>
                    </button>
                </div>
            </div>

            <div class="space-y-6">
                <div class="bg-white rounded-[2rem] p-6 border border-slate-200">
                    <h3 class="font-black text-sm uppercase tracking-wider text-slate-400 mb-4">Unit Shortcuts</h3>
                    <div class="space-y-3">
                        <div class="flex justify-between p-3 bg-slate-50 rounded-xl">
                            <span class="text-sm font-bold">Gate Access</span>
                            <button class="text-indigo-600 font-bold text-xs uppercase">Open</button>
                        </div>
                        <div class="flex justify-between p-3 bg-slate-50 rounded-xl">
                            <span class="text-sm font-bold">Guest Code</span>
                            <span class="text-indigo-600 font-black">#8291</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- LEASE MANAGEMENT FLOW (Root) -->
    <div id="lease-flow" class="view-panel max-w-3xl mx-auto px-6 pt-10 md:pt-28">
        <button onclick="showView('main-dashboard')" class="flex items-center gap-2 text-slate-400 font-bold mb-6 hover:text-indigo-600">
            <i class="fa-solid fa-arrow-left"></i> Back
        </button>
        <div class="bg-white rounded-[2.5rem] border border-slate-200 overflow-hidden shadow-sm mb-6">
            <div class="p-8 border-b flex justify-between items-center">
                <h2 class="text-xl font-black">Digital Lease Agreement</h2>
                <span class="bg-emerald-100 text-emerald-700 px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest">Active</span>
            </div>
            <div class="p-8 space-y-6">
                <div class="flex items-center gap-4 p-4 bg-slate-50 rounded-2xl">
                    <i class="fa-solid fa-file-pdf text-rose-500 text-2xl"></i>
                    <div class="flex-1">
                        <p class="font-bold text-sm">Lease_402_Alex_2025.pdf</p>
                        <p class="text-xs text-slate-400">Signed on 12 Feb 2025</p>
                    </div>
                    <button class="text-indigo-600"><i class="fa-solid fa-download"></i></button>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div class="p-4 border border-slate-100 rounded-2xl">
                        <p class="text-[10px] font-black text-slate-400 uppercase mb-1">Expiry Date</p>
                        <p class="font-bold text-indigo-600">31 Jan 2026</p>
                    </div>
                    <div class="p-4 border border-slate-100 rounded-2xl">
                        <p class="text-[10px] font-black text-slate-400 uppercase mb-1">Notice Period</p>
                        <p class="font-bold">1 Month</p>
                    </div>
                </div>
            </div>
        </div>
        <button onclick="showView('extension-request')" class="w-full py-6 bg-indigo-600 text-white rounded-[2rem] font-black text-lg shadow-xl shadow-indigo-100 hover:bg-indigo-700 transition-all flex items-center justify-center gap-3">
            <i class="fa-solid fa-calendar-plus"></i>
            Request Lease Extension
        </button>
    </div>

    <!-- LEASE EXTENSION FLOW (Request Step) -->
    <div id="extension-request" class="view-panel max-w-2xl mx-auto px-6 pt-10 md:pt-28">
        <button onclick="showView('lease-flow')" class="flex items-center gap-2 text-slate-400 font-bold mb-6 hover:text-indigo-600">
            <i class="fa-solid fa-arrow-left"></i> Back to Lease
        </button>
        
        <div class="bg-white rounded-[3rem] p-8 md:p-12 border border-slate-200 shadow-xl">
            <h2 class="text-3xl font-black text-slate-900 mb-2">Extension Request</h2>
            <p class="text-slate-500 mb-10">Current lease ends: <span class="font-bold text-slate-700">31 Jan 2026</span></p>
            
            <div class="space-y-8">
                <!-- Term Selection -->
                <div>
                    <label class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-4 block">Choose Duration</label>
                    <div class="grid grid-cols-3 gap-3">
                        <button onclick="setTerm(6)" class="term-btn py-4 px-2 border-2 border-slate-100 rounded-2xl font-bold text-sm hover:border-indigo-600 transition-all">6 Months</button>
                        <button onclick="setTerm(12)" class="term-btn py-4 px-2 border-2 border-slate-100 rounded-2xl font-bold text-sm hover:border-indigo-600 transition-all">12 Months</button>
                        <button onclick="setTerm(0)" class="term-btn py-4 px-2 border-2 border-indigo-600 bg-indigo-50 rounded-2xl font-bold text-sm transition-all" id="custom-term-btn">Custom</button>
                    </div>
                </div>

                <!-- Date Picker -->
                <div>
                    <label class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-4 block">New End Date</label>
                    <div class="relative">
                        <input type="date" id="extension-date" min="2026-02-01" value="2026-07-31" class="w-full p-5 bg-slate-50 border-2 border-slate-100 rounded-2xl font-bold text-indigo-600 focus:border-indigo-600 focus:outline-none transition-all">
                        <i class="fa-solid fa-calendar absolute right-5 top-1/2 -translate-y-1/2 text-slate-300 pointer-events-none"></i>
                    </div>
                </div>

                <div class="p-6 bg-amber-50 rounded-2xl border border-amber-100 flex gap-4">
                    <i class="fa-solid fa-circle-info text-amber-600 mt-1"></i>
                    <p class="text-xs text-amber-800 leading-relaxed font-medium">
                        Requests are subject to a rental review. You will receive a formal offer within 48 hours of submission.
                    </p>
                </div>

                <button onclick="completeAction('Lease Extension')" class="w-full py-5 bg-indigo-600 text-white rounded-2xl font-black text-lg hover:bg-indigo-700 shadow-xl shadow-indigo-50 transition-all">
                    Submit Request
                </button>
            </div>
        </div>
    </div>

    <!-- RENT FLOW, BOOKING FLOW, CHECKOUT FLOW (Placeholder UI for brevity) -->
    <div id="rent-flow" class="view-panel max-w-2xl mx-auto px-6 pt-28">
        <button onclick="showView('main-dashboard')" class="text-slate-400 font-bold mb-4">← Back</button>
        <div class="bg-white p-10 rounded-3xl border">Payment Logic Here</div>
    </div>
    <div id="booking-flow" class="view-panel max-w-2xl mx-auto px-6 pt-28">
        <button onclick="showView('main-dashboard')" class="text-slate-400 font-bold mb-4">← Back</button>
        <div class="bg-white p-10 rounded-3xl border">Booking Calendar Here</div>
    </div>
    <div id="checkout-flow" class="view-panel max-w-2xl mx-auto px-6 pt-28 text-center">
        <button onclick="showView('main-dashboard')" class="text-slate-400 font-bold mb-4">← Cancel</button>
        <div class="bg-white p-10 rounded-3xl border">Final Inspection and Move-Out Form</div>
    </div>

    <!-- SUCCESS MODAL -->
    <div id="success-modal" class="fixed inset-0 bg-indigo-950/80 backdrop-blur-sm z-[100] flex items-center justify-center p-6 hidden">
        <div class="bg-white rounded-[3rem] p-12 max-w-sm w-full text-center shadow-2xl">
            <div class="w-24 h-24 bg-emerald-100 text-emerald-600 rounded-full flex items-center justify-center text-4xl mx-auto mb-8">
                <i class="fa-solid fa-check"></i>
            </div>
            <h3 class="text-2xl font-black text-slate-900 mb-2" id="success-title">Success!</h3>
            <p class="text-slate-500 mb-10 text-sm leading-relaxed" id="success-message">Your request has been processed successfully.</p>
            <button onclick="closeSuccess()" class="w-full py-4 bg-slate-900 text-white rounded-2xl font-bold hover:bg-slate-800 transition-all">Back to Dashboard</button>
        </div>
    </div>

    <script>
        function showView(viewId) {
            document.querySelectorAll('.view-panel').forEach(p => p.classList.remove('active'));
            document.getElementById(viewId).classList.add('active');
            window.scrollTo(0, 0);
            
            const navHome = document.getElementById('nav-home');
            if(viewId === 'main-dashboard') navHome.classList.add('tab-active');
            else navHome.classList.remove('tab-active');
        }

        function setTerm(months) {
            const dateInput = document.getElementById('extension-date');
            const btns = document.querySelectorAll('.term-btn');
            btns.forEach(b => {
                b.classList.remove('border-indigo-600', 'bg-indigo-50');
                b.classList.add('border-slate-100');
            });

            if (months > 0) {
                // Current end date is 2026-01-31
                const baseDate = new Date(2026, 0, 31);
                baseDate.setMonth(baseDate.getMonth() + months);
                dateInput.value = baseDate.toISOString().split('T')[0];
                event.currentTarget.classList.add('border-indigo-600', 'bg-indigo-50');
            } else {
                document.getElementById('custom-term-btn').classList.add('border-indigo-600', 'bg-indigo-50');
            }
        }

        function completeAction(type) {
            const modal = document.getElementById('success-modal');
            const title = document.getElementById('success-title');
            const msg = document.getElementById('success-message');
            const dateVal = document.getElementById('extension-date').value;

            title.innerText = `${type} Sent`;
            msg.innerText = type === 'Lease Extension' 
                ? `Request for extension until ${dateVal} has been submitted for review.`
                : `We've successfully updated your record for ${type}.`;
            
            modal.classList.remove('hidden');
        }

        function closeSuccess() {
            document.getElementById('success-modal').classList.add('hidden');
            showView('main-dashboard');
        }
    </script>
</body>
</html>