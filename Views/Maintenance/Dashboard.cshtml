<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cosy Commune | Maintenance Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-slate-50 text-slate-900 font-sans min-h-screen">

<div class="max-w-5xl mx-auto px-4 py-6">
    <!-- Navigation Header -->
    <header class="flex items-center justify-between mb-8">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-indigo-600 rounded-xl flex items-center justify-center text-white shadow-lg">
                <i class="fa-solid fa-screwdriver-wrench"></i>
            </div>
            <div>
                <h1 class="text-lg font-bold text-slate-900 leading-tight">Maintenance Portal</h1>
                <p class="text-xs text-slate-500 font-medium">Cosy Commune Unit 402</p>
            </div>
        </div>
        <button onclick="showView('dashboard')" class="p-2 hover:bg-slate-200 rounded-full transition-colors">
            <i class="fa-solid fa-house text-slate-400"></i>
        </button>
    </header>

    <!-- VIEW: Tenant Dashboard -->
    <main class="view-panel active" id="dashboard">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <button onclick="showView('log-form')" class="bg-indigo-600 p-6 rounded-3xl shadow-lg shadow-indigo-100 text-white flex flex-col justify-center hover:bg-indigo-700 transition-all group">
                <i class="fa-solid fa-plus-circle text-2xl mb-2 group-hover:scale-110 transition-transform"></i>
                <p class="font-bold">Log New Issue</p>
            </button>
            <div class="bg-white p-6 rounded-3xl shadow-sm border border-slate-200">
                <p class="text-xs font-bold text-slate-400 uppercase tracking-wider mb-2">Open Issues</p>
                <p class="text-3xl font-black text-slate-900">01</p>
            </div>
            <div class="bg-white p-6 rounded-3xl shadow-sm border border-slate-200">
                <p class="text-xs font-bold text-slate-400 uppercase tracking-wider mb-2">Resolved This Month</p>
                <p class="text-3xl font-black text-indigo-600">04</p>
            </div>
        </div>

        <h2 class="text-xl font-bold mb-4 px-2">Recent Activity</h2>
        <div class="space-y-4">
            <!-- Example Item -->
            <div class="bg-white p-5 rounded-3xl border border-slate-200 flex items-center justify-between priority-medium hover:shadow-md transition-shadow cursor-pointer" onclick="showView('tracking')">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-amber-50 text-amber-600 rounded-2xl flex items-center justify-center">
                        <i class="fa-solid fa-droplet"></i>
                    </div>
                    <div>
                        <h3 class="font-bold text-slate-900">Leaking Kitchen Tap</h3>
                        <p class="text-xs text-slate-500">Logged yesterday at 14:30 • Ref: #MT-992</p>
                    </div>
                </div>
                <div class="text-right">
                    <span class="px-3 py-1 bg-amber-100 text-amber-700 rounded-full text-[10px] font-black uppercase tracking-widest">In Progress</span>
                </div>
            </div>

            <div class="bg-white p-5 rounded-3xl border border-slate-200 flex items-center justify-between opacity-60 grayscale">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-slate-100 text-slate-600 rounded-2xl flex items-center justify-center">
                        <i class="fa-solid fa-bolt"></i>
                    </div>
                    <div>
                        <h3 class="font-bold text-slate-900">Socket Replacement</h3>
                        <p class="text-xs text-slate-500">Completed 3 days ago • Ref: #MT-812</p>
                    </div>
                </div>
                <div class="text-right">
                    <span class="px-3 py-1 bg-slate-100 text-slate-400 rounded-full text-[10px] font-black uppercase tracking-widest">Closed</span>
                </div>
            </div>
        </div>
    </main>

    <!-- VIEW: Log Issue Form -->
    <main class="view-panel" id="log-form">
        <div class="bg-white rounded-3xl shadow-xl border border-slate-200 overflow-hidden">
            <div class="p-8 border-b border-slate-100 bg-slate-50/50">
                <h2 class="text-2xl font-black text-slate-900">Report an Issue</h2>
                <p class="text-sm text-slate-500">Please provide details so we can assign the right technician.</p>
            </div>
            
            <form id="maintenanceForm" class="p-8 space-y-6" onsubmit="submitIssue(event)">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Category Selection -->
                    <div class="space-y-2">
                        <label class="text-xs font-black uppercase text-slate-400 ml-1">Category</label>
                        <select id="m_category" required class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none transition-all appearance-none">
                            <option value="">Select Category</option>
                            <option value="plumbing">Plumbing & Water</option>
                            <option value="electrical">Electrical & Lighting</option>
                            <option value="appliance">Appliance Repair</option>
                            <option value="structure">Structural / Walls</option>
                            <option value="security">Security & Access</option>
                        </select>
                    </div>

                    <!-- Priority Selection -->
                    <div class="space-y-2">
                        <label class="text-xs font-black uppercase text-slate-400 ml-1">Priority Level</label>
                        <div class="flex gap-2">
                            <label class="flex-1 cursor-pointer">
                                <input type="radio" name="priority" value="low" class="hidden peer">
                                <div class="p-4 text-center border border-slate-200 rounded-2xl peer-checked:bg-emerald-50 peer-checked:border-emerald-500 peer-checked:text-emerald-700 text-xs font-bold transition-all">Low</div>
                            </label>
                            <label class="flex-1 cursor-pointer">
                                <input type="radio" name="priority" value="medium" checked class="hidden peer">
                                <div class="p-4 text-center border border-slate-200 rounded-2xl peer-checked:bg-amber-50 peer-checked:border-amber-500 peer-checked:text-amber-700 text-xs font-bold transition-all">Medium</div>
                            </label>
                            <label class="flex-1 cursor-pointer">
                                <input type="radio" name="priority" value="high" class="hidden peer">
                                <div class="p-4 text-center border border-slate-200 rounded-2xl peer-checked:bg-red-50 peer-checked:border-red-500 peer-checked:text-red-700 text-xs font-bold transition-all">High/Emergency</div>
                            </label>
                        </div>
                    </div>

                    <!-- Location in Unit -->
                    <div class="space-y-2">
                        <label class="text-xs font-black uppercase text-slate-400 ml-1">Location in Unit</label>
                        <input type="text" id="m_location" required placeholder="e.g. Master Bedroom, Balcony" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none">
                    </div>

                    <!-- Best Contact Time -->
                    <div class="space-y-2">
                        <label class="text-xs font-black uppercase text-slate-400 ml-1">Best Time for Entry</label>
                        <select id="m_time" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none">
                            <option>Anytime</option>
                            <option>Morning (08:00 - 12:00)</option>
                            <option>Afternoon (12:00 - 17:00)</option>
                            <option>Contact me first</option>
                        </select>
                    </div>

                    <!-- Description -->
                    <div class="space-y-2 md:col-span-2">
                        <label class="text-xs font-black uppercase text-slate-400 ml-1">Description of Issue</label>
                        <textarea id="m_desc" required placeholder="Describe the problem in detail..." class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none h-32 resize-none"></textarea>
                    </div>

                    <!-- Photos -->
                    <div class="space-y-2 md:col-span-2">
                        <label class="text-xs font-black uppercase text-slate-400 ml-1">Photos (Optional)</label>
                        <div class="border-2 border-dashed border-slate-200 rounded-3xl p-8 text-center hover:border-indigo-400 transition-colors cursor-pointer bg-slate-50/50">
                            <i class="fa-solid fa-camera text-2xl text-slate-400 mb-2"></i>
                            <p class="text-sm text-slate-500">Click to upload or drag and drop images</p>
                        </div>
                    </div>
                </div>

                <div class="flex gap-4 pt-4">
                    <button type="button" onclick="showView('dashboard')" class="px-8 py-4 border border-slate-200 rounded-2xl font-bold text-slate-500 hover:bg-slate-50 transition-all">Cancel</button>
                    <button type="submit" class="flex-1 py-4 bg-indigo-600 text-white rounded-2xl font-bold shadow-lg shadow-indigo-100 hover:bg-indigo-700 transition-all">Submit Maintenance Request</button>
                </div>
            </form>
        </div>
    </main>

    <!-- VIEW: Tracking & Progress -->
    <main class="view-panel" id="tracking">
        <div class="max-w-2xl mx-auto">
            <div class="bg-white rounded-3xl shadow-sm border border-slate-200 overflow-hidden mb-6">
                <div class="p-6 bg-slate-900 text-white flex justify-between items-center">
                    <div>
                        <p class="text-[10px] font-black uppercase tracking-widest opacity-60">Request Tracking</p>
                        <h3 class="text-xl font-bold" id="tracking_title">AC Not Cooling</h3>
                    </div>
                    <span class="px-3 py-1 bg-indigo-500 rounded-full text-[10px] font-bold">#MT-1044</span>
                </div>
                
                <div class="p-8">
                    <!-- Timeline -->
                    <div class="space-y-8 relative">
                        <!-- Connector Line -->
                        <div class="absolute left-[19px] top-2 bottom-2 w-0.5 bg-slate-100"></div>

                        <!-- Step 1 (Done) -->
                        <div class="flex gap-6 relative">
                            <div class="w-10 h-10 rounded-full bg-emerald-500 text-white flex items-center justify-center z-10 shadow-lg shadow-emerald-100">
                                <i class="fa-solid fa-check text-xs"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-slate-900">Request Received</h4>
                                <p class="text-xs text-slate-500">Logged via Portal • Oct 24, 09:12</p>
                            </div>
                        </div>

                        <!-- Step 2 (Active) -->
                        <div class="flex gap-6 relative">
                            <div class="w-10 h-10 rounded-full bg-indigo-600 text-white flex items-center justify-center z-10 shadow-lg shadow-indigo-100 animate-pulse">
                                <i class="fa-solid fa-user-gear text-xs"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-slate-900">Technician Assigned</h4>
                                <p class="text-xs text-slate-500">Thabo M. (General Repair) • Assigned at 10:45</p>
                                <div class="mt-3 p-3 bg-slate-50 rounded-2xl border border-slate-100 flex items-center gap-3">
                                    <div class="w-8 h-8 bg-slate-200 rounded-full"></div>
                                    <div>
                                        <p class="text-[10px] font-bold text-slate-800">ETA: Today, 14:00 - 15:00</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Step 3 (Pending) -->
                        <div class="flex gap-6 relative opacity-30">
                            <div class="w-10 h-10 rounded-full bg-slate-200 text-slate-500 flex items-center justify-center z-10">
                                <i class="fa-solid fa-wrench text-xs"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-slate-900">Repair in Progress</h4>
                                <p class="text-xs text-slate-500">Technician on site</p>
                            </div>
                        </div>

                        <!-- Step 4 (Pending) -->
                        <div class="flex gap-6 relative opacity-30">
                            <div class="w-10 h-10 rounded-full bg-slate-200 text-slate-500 flex items-center justify-center z-10">
                                <i class="fa-solid fa-circle-check text-xs"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-slate-900">Final Verification</h4>
                                <p class="text-xs text-slate-500">System confirmation</p>
                            </div>
                        </div>
                    </div>

                    <!-- Hidden Button to simulate completion (For Demo) -->
                    <button onclick="simulateCompletion()" class="mt-12 w-full py-4 bg-slate-100 text-slate-400 text-xs font-bold rounded-2xl hover:bg-slate-200 transition-all italic uppercase tracking-widest">
                        [ Dev: Simulate Work Finished ]
                    </button>
                </div>
            </div>
            
            <button onclick="showView('dashboard')" class="w-full py-4 text-slate-400 font-bold hover:text-slate-900 transition-colors">Return to Dashboard</button>
        </div>
    </main>

    <!-- VIEW: Completion & Review -->
    <main class="view-panel" id="completion">
        <div class="max-w-xl mx-auto text-center py-12">
            <div class="w-24 h-24 bg-emerald-100 text-emerald-600 rounded-full flex items-center justify-center text-4xl mx-auto mb-8">
                <i class="fa-solid fa-hand-sparkles"></i>
            </div>
            <h2 class="text-3xl font-black mb-2">Repair Completed!</h2>
            <p class="text-slate-500 mb-10 leading-relaxed">Thabo M. has marked your request <strong>#MT-1044</strong> as resolved. Please let us know if you're happy with the result.</p>
            
            <div class="bg-white p-8 rounded-3xl border border-slate-200 shadow-sm mb-10">
                <p class="text-xs font-bold uppercase text-slate-400 mb-4">Rate the service</p>
                <div class="flex justify-center gap-4 text-3xl mb-8">
                    <i class="fa-solid fa-star text-amber-400 cursor-pointer"></i>
                    <i class="fa-solid fa-star text-amber-400 cursor-pointer"></i>
                    <i class="fa-solid fa-star text-amber-400 cursor-pointer"></i>
                    <i class="fa-solid fa-star text-amber-400 cursor-pointer"></i>
                    <i class="fa-solid fa-star text-slate-200 cursor-pointer"></i>
                </div>
                <textarea placeholder="Any additional feedback? (Optional)" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none h-24 resize-none mb-6"></textarea>
                <button onclick="showView('dashboard')" class="w-full py-5 bg-indigo-600 text-white font-bold rounded-2xl hover:bg-indigo-700 transition-all">Submit Feedback</button>
            </div>
        </div>
    </main>

    <!-- Toast Notification -->
    <div id="toast" class="fixed bottom-8 left-1/2 -translate-x-1/2 bg-slate-900 text-white px-6 py-4 rounded-2xl shadow-2xl flex items-center gap-4 opacity-0 pointer-events-none transition-all duration-300 translate-y-10">
        <i class="fa-solid fa-circle-check text-emerald-400"></i>
        <p id="toastMessage" class="text-sm font-bold"></p>
    </div>
</div>

<script>
    function showView(viewId) {
        document.querySelectorAll('.view-panel').forEach(p => p.classList.remove('active'));
        const target = document.getElementById(viewId);
        target.classList.add('active');
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function submitIssue(e) {
        e.preventDefault();
        
        const category = document.getElementById('m_category').value;
        const desc = document.getElementById('m_desc').value;
        
        // Update Tracking view title
        document.getElementById('tracking_title').innerText = desc.substring(0, 30) + (desc.length > 30 ? '...' : '');
        
        showToast("Submitting your request...");
        
        setTimeout(() => {
            showView('tracking');
            showToast("Issue Logged Successfully!");
        }, 1200);
    }

    function simulateCompletion() {
        showToast("Repair in progress...");
        setTimeout(() => {
            showView('completion');
        }, 1500);
    }

    function showToast(msg) {
        const toast = document.getElementById('toast');
        const msgEl = document.getElementById('toastMessage');
        msgEl.innerText = msg;
        toast.classList.add('opacity-100', 'translate-y-0');
        toast.classList.remove('translate-y-10');
        
        setTimeout(() => {
            toast.classList.remove('opacity-100', 'translate-y-0');
            toast.classList.add('translate-y-10');
        }, 3000);
    }
</script>

</body>
</html>