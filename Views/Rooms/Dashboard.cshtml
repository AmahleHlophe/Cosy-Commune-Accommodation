                       maintainAspectRatio: false,
                       plugins: {
                            legend: { display: false }
                       },
                       scales: {
                           x: { grid: { display: false } },
                           y: { beginAtZero: true, ticks: { maxTicksLimit: 5 } }
                       }
                    }
                });
            }
        });
    </script>
</body>
