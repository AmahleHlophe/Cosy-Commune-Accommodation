@model IEnumerable<Room>;

@{
    ViewData["Title"] = "Rooms";
}

<h1 class="my-4">Rooms</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Create a New Room</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.RoomType)</th>
                <th>@Html.DisplayNameFor(model => model.RoomNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Capacity)</th>
                <th>@Html.DisplayNameFor(model => model.IsOccupied)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var room in Model){
                <tr>
                    <td>@Html.DisplayFor(modelItem => room.RoomType)</td>
                    <td>@Html.DisplayFor(modelItem => room.RoomNumber)</td>
                    <td>@Html.DisplayFor(modelItem => room.Capacity)</td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" checked="@room.IsOccupied" disabled readonly>
                            <label class="form-check-label">
                                @(room.IsOccupied ? "Occupied" : "Unoccupied")
                            </label>
                        </div>
                    </td>
                    <td>@Html.DisplayFor(modelItem => room.Price)</td>
                    <td>
                        @if(!room.IsOccupied){

                        <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-warning btn-sm">Edit</a>
                        @* <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-info btn-sm">Details</a> *@
                        <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-danger btn-sm">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>