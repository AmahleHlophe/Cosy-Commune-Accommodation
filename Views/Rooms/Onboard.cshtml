<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cosy Commune | Booking Workflow</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-slate-50 text-slate-900 font-sans">

<div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Header -->
    <header class="flex flex-col md:flex-row md:items-center justify-between mb-8 gap-4">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-indigo-600 rounded-xl flex items-center justify-center text-white shadow-lg">
                <i class="fa-solid fa-house-chimney-window"></i>
            </div>
            <div>
                <h1 class="text-xl font-bold text-slate-900">Cosy Commune</h1>
                <p class="text-xs text-slate-500 uppercase tracking-widest font-semibold">Hospitality Group</p>
            </div>
        </div>

        <!-- Navigation Progress -->
        <nav class="flex items-center gap-2 bg-white p-1.5 rounded-full border border-slate-200 shadow-sm overflow-x-auto no-scrollbar">
            <div class="step-dot px-4 py-1.5 rounded-full text-xs font-bold transition-all bg-indigo-600 text-white" data-step="1">1. Search</div>
            <div class="step-dot px-4 py-1.5 rounded-full text-xs font-bold transition-all text-slate-400" data-step="2">2. Results</div>
            <div class="step-dot px-4 py-1.5 rounded-full text-xs font-bold transition-all text-slate-400" data-step="3">3. Review</div>
            <div class="step-dot px-4 py-1.5 rounded-full text-xs font-bold transition-all text-slate-400" data-step="4">4. Details</div>
            <div class="step-dot px-4 py-1.5 rounded-full text-xs font-bold transition-all text-slate-400" data-step="5">5. Payment</div>
        </nav>
    </header>

    <!-- Timer/Hold Banner (Hidden by default) -->
    <div id="holdTimer" class="hidden mb-6 bg-amber-50 border border-amber-200 rounded-2xl p-4 flex items-center justify-between shadow-sm">
        <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-amber-100 text-amber-600 rounded-full flex items-center justify-center animate-pulse">
                <i class="fa-solid fa-hourglass-half"></i>
            </div>
            <div>
                <p class="text-sm font-bold text-amber-900">Room Held for you</p>
                <p class="text-xs text-amber-700">Complete your booking before the timer expires.</p>
            </div>
        </div>
        <div class="text-right">
            <span id="timerDisplay" class="text-xl font-mono font-bold text-amber-600">10:00</span>
            <div class="w-32 h-1 bg-amber-200 mt-1 rounded-full overflow-hidden">
                <div id="timerBar" class="h-full bg-amber-500 timer-progress" style="width: 100%;"></div>
            </div>
        </div>
    </div>

    <!-- MAIN WORKFLOW CONTAINER -->
    <main class="bg-white rounded-3xl shadow-xl shadow-slate-200/50 border border-slate-200 overflow-hidden min-h-[500px]">
        
        <!-- STEP 1: Search & Filter -->
        <div class="step-panel active" id="step1">
            <div class="p-8 md:p-12 max-w-2xl mx-auto">
                <div class="text-center mb-10">
                    <h2 class="text-3xl font-black text-slate-900 mb-2">Find your perfect stay</h2>
                    <p class="text-slate-500">Search 500+ premium rooms in the Commune network</p>
                </div>
                
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="space-y-2">
                            <label class="text-xs font-bold uppercase text-slate-400 ml-1">Check-in</label>
                            <input type="date" id="checkInDate" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none transition-all">
                        </div>
                        <div class="space-y-2">
                            <label class="text-xs font-bold uppercase text-slate-400 ml-1">Check-out</label>
                            <input type="date" id="checkOutDate" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none transition-all">
                        </div>
                    </div>
                    <div class="space-y-2">
                        <label class="text-xs font-bold uppercase text-slate-400 ml-1">Location / Commune</label>
                        <select class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none transition-all appearance-none">
                            <option>Cape Town CBD</option>
                            <option>Johannesburg Sandton</option>
                            <option>Durban North</option>
                        </select>
                    </div>
                    <button onclick="goToStep(2)" class="w-full py-5 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-2xl shadow-lg shadow-indigo-100 transition-all transform active:scale-[0.98]">
                        Check Availability
                    </button>
                </div>
            </div>
        </div>

        <!-- STEP 2: Availability Check & Selection -->
        <div class="step-panel" id="step2">
            <div class="p-8">
                <div class="flex items-center justify-between mb-8 pb-6 border-b border-slate-100">
                    <div>
                        <h2 class="text-2xl font-bold">Available Properties</h2>
                        <p class="text-sm text-slate-500">Based on your dates: <span class="font-bold text-indigo-600">June 12 - June 15</span></p>
                    </div>
                    <button onclick="goToStep(1)" class="text-sm font-bold text-slate-400 hover:text-slate-900 transition-colors">Change Dates</button>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="resultsGrid">
                    <!-- Property Cards -->
                    <div class="property-card bg-white border border-slate-200 rounded-2xl overflow-hidden transition-all cursor-pointer group" onclick="selectProperty('Studio 101', 550)">
                        <div class="h-48 bg-slate-200 relative">
                            <img src="https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?auto=format&fit=crop&q=80&w=600" class="w-full h-full object-cover">
                            <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold shadow-sm">
                                4.9 <i class="fa-solid fa-star text-amber-400"></i>
                            </div>
                        </div>
                        <div class="p-5">
                            <h3 class="font-bold text-lg group-hover:text-indigo-600 transition-colors">The Urban Studio 101</h3>
                            <p class="text-sm text-slate-500 mb-4">Industrial Park • Ground Floor</p>
                            <div class="flex items-center justify-between pt-4 border-t border-slate-50">
                                <div>
                                    <span class="text-xl font-black text-slate-900">R 550</span>
                                    <span class="text-xs text-slate-400">/ night</span>
                                </div>
                                <span class="text-xs font-bold text-indigo-600 uppercase tracking-tighter">View Room</span>
                            </div>
                        </div>
                    </div>

                    <div class="property-card bg-white border border-slate-200 rounded-2xl overflow-hidden transition-all cursor-pointer group" onclick="selectProperty('Deluxe Suite 205', 850)">
                        <div class="h-48 bg-slate-200 relative">
                            <img src="https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?auto=format&fit=crop&q=80&w=600" class="w-full h-full object-cover">
                            <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold shadow-sm">
                                5.0 <i class="fa-solid fa-star text-amber-400"></i>
                            </div>
                        </div>
                        <div class="p-5">
                            <h3 class="font-bold text-lg group-hover:text-indigo-600 transition-colors">Deluxe Balcony Suite 205</h3>
                            <p class="text-sm text-slate-500 mb-4">City Heights • Rooftop Access</p>
                            <div class="flex items-center justify-between pt-4 border-t border-slate-50">
                                <div>
                                    <span class="text-xl font-black text-slate-900">R 850</span>
                                    <span class="text-xs text-slate-400">/ night</span>
                                </div>
                                <span class="text-xs font-bold text-indigo-600 uppercase tracking-tighter">View Room</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- STEP 3: Review & Soft Lock -->
        <div class="step-panel" id="step3">
            <div class="grid grid-cols-1 lg:grid-cols-5 h-full">
                <div class="lg:col-span-3 p-8 md:p-12">
                    <h2 class="text-2xl font-bold mb-6">Review your Selection</h2>
                    <div class="flex items-center gap-6 mb-8 bg-slate-50 p-6 rounded-3xl">
                        <div class="w-32 h-24 bg-slate-200 rounded-2xl overflow-hidden">
                            <img id="selectedImg" src="https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?auto=format&fit=crop&q=80&w=300" class="w-full h-full object-cover">
                        </div>
                        <div>
                            <h3 id="reviewTitle" class="text-xl font-bold">Studio 101</h3>
                            <p class="text-slate-500 text-sm">3 Nights • 2 Guests</p>
                            <p class="text-indigo-600 font-bold mt-2">Free Cancellation before 48h</p>
                        </div>
                    </div>
                    
                    <div class="space-y-4">
                        <div class="flex items-center gap-3 text-slate-600">
                            <i class="fa-solid fa-wifi"></i> <span>High Speed Fiber Internet</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-600">
                            <i class="fa-solid fa-bolt"></i> <span>Loadsidding Protected (Inverter)</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-600">
                            <i class="fa-solid fa-shield-check"></i> <span>24/7 Security Patrol</span>
                        </div>
                    </div>

                    <div class="mt-12 flex gap-4">
                        <button onclick="goToStep(2)" class="px-8 py-4 border border-slate-200 rounded-2xl font-bold hover:bg-slate-50 transition-all">Go Back</button>
                        <button onclick="startSoftLock()" class="flex-1 py-4 bg-indigo-600 text-white rounded-2xl font-bold shadow-lg shadow-indigo-100 hover:bg-indigo-700 transition-all">Proceed to Checkout</button>
                    </div>
                </div>
                
                <!-- Price Sidebar -->
                <div class="lg:col-span-2 bg-slate-50 p-8 border-l border-slate-100">
                    <h3 class="font-bold text-lg mb-6">Price Summary</h3>
                    <div class="space-y-4 text-sm">
                        <div class="flex justify-between">
                            <span class="text-slate-500">Accommodation <span id="calcLabel">3 nights</span></span>
                            <span class="font-bold" id="basePriceDisplay">R 1,650.00</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-500">Cleaning Fee</span>
                            <span class="font-bold">R 150.00</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-500">VAT (15%)</span>
                            <span class="font-bold" id="vatDisplay">R 270.00</span>
                        </div>
                        <div class="pt-4 border-t border-slate-200 flex justify-between items-center">
                            <span class="text-lg font-bold">Total Amount</span>
                            <span class="text-3xl font-black text-indigo-600" id="totalPriceDisplay">R 2,070.00</span>
                        </div>
                    </div>
                    <div class="mt-8 p-4 bg-indigo-50 rounded-xl border border-indigo-100">
                        <p class="text-xs text-indigo-700 leading-relaxed">
                            <i class="fa-solid fa-circle-info mr-1"></i> A R500 security deposit will be authorized on your card upon arrival.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- STEP 4: Guest Information -->
        <div class="step-panel" id="step4">
            <div class="p-8 md:p-12 max-w-3xl mx-auto">
                <h2 class="text-2xl font-bold mb-8">Guest Details</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <div class="space-y-2">
                        <label class="text-xs font-bold uppercase text-slate-400 ml-1">First Name</label>
                        <input type="text" placeholder="John" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none">
                    </div>
                    <div class="space-y-2">
                        <label class="text-xs font-bold uppercase text-slate-400 ml-1">Last Name</label>
                        <input type="text" placeholder="Doe" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none">
                    </div>
                    <div class="space-y-2 md:col-span-2">
                        <label class="text-xs font-bold uppercase text-slate-400 ml-1">Email Address</label>
                        <input type="email" placeholder="john@example.com" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none">
                    </div>
                    <div class="space-y-2 md:col-span-2">
                        <label class="text-xs font-bold uppercase text-slate-400 ml-1">Special Requests</label>
                        <textarea placeholder="e.g. Late check-in, dietary needs" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-indigo-500 outline-none h-32 resize-none"></textarea>
                    </div>
                </div>
                <button onclick="goToStep(5)" class="w-full py-5 bg-indigo-600 text-white font-bold rounded-2xl shadow-lg hover:bg-indigo-700 transition-all">
                    Continue to Payment
                </button>
            </div>
        </div>

        <!-- STEP 5: Payment & Confirmation -->
        <div class="step-panel" id="step5">
            <div class="p-8 md:p-12 max-w-xl mx-auto">
                <div id="paymentArea">
                    <h2 class="text-2xl font-bold mb-2">Secure Payment</h2>
                    <p class="text-slate-500 mb-8 text-sm">Enter your card details to finalize the room.</p>
                    
                    <div class="space-y-6">
                        <div class="p-6 bg-slate-900 rounded-3xl text-white shadow-xl relative overflow-hidden mb-8">
                            <div class="relative z-10">
                                <p class="text-[10px] opacity-60 uppercase mb-4">Credit Card Provider</p>
                                <div class="text-xl font-mono tracking-widest mb-6">**** **** **** 1234</div>
                                <div class="flex justify-between items-end">
                                    <div>
                                        <p class="text-[10px] opacity-40 uppercase">Card Holder</p>
                                        <p class="text-sm font-bold tracking-wide">JOHN DOE</p>
                                    </div>
                                    <div class="w-12 h-8 bg-slate-700 rounded flex items-center justify-center opacity-50">
                                        <i class="fa-brands fa-cc-visa text-2xl"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="absolute -right-8 -bottom-8 w-40 h-40 bg-indigo-500/20 rounded-full blur-3xl"></div>
                        </div>

                        <button onclick="processPayment()" id="payBtn" class="w-full py-5 bg-emerald-600 hover:bg-emerald-700 text-white font-bold rounded-2xl shadow-lg transition-all flex items-center justify-center gap-3">
                            <span>Pay <span id="finalTotal">R 2,070.00</span></span>
                            <i class="fa-solid fa-lock text-sm opacity-60"></i>
                        </button>
                    </div>
                </div>

                <!-- Success State (Hidden until pay) -->
                <div id="successState" class="hidden text-center py-10">
                    <div class="w-24 h-24 bg-emerald-100 text-emerald-600 rounded-full flex items-center justify-center text-4xl mx-auto mb-8 shadow-inner">
                        <i class="fa-solid fa-check"></i>
                    </div>
                    <h2 class="text-3xl font-black mb-4">Booking Confirmed!</h2>
                    <p class="text-slate-500 mb-8 leading-relaxed">
                        We've sent a confirmation email to <span class="font-bold text-slate-900">john@example.com</span>. 
                        Your digital key will be available in the app 24h before arrival.
                    </p>
                    <div class="grid grid-cols-2 gap-3 mb-10">
                        <div class="p-4 bg-slate-50 rounded-2xl border border-slate-100">
                            <p class="text-[10px] font-bold text-slate-400 uppercase">Booking ID</p>
                            <p class="font-mono text-sm">#CC-88219</p>
                        </div>
                        <div class="p-4 bg-slate-50 rounded-2xl border border-slate-100">
                            <p class="text-[10px] font-bold text-slate-400 uppercase">Room</p>
                            <p id="finalRoomName" class="font-bold text-sm">Studio 101</p>
                        </div>
                    </div>
                    <button onclick="window.location.reload()" class="w-full py-4 border border-slate-200 rounded-2xl font-bold text-slate-500 hover:bg-slate-50 transition-all">Return Home</button>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer Meta -->
    <footer class="mt-8 text-center text-slate-400 text-xs flex flex-col items-center gap-2">
        <p>&copy; 2024 Cosy Commune Hospitality. Licensed in South Africa.</p>
        <div class="flex gap-4">
            <a href="#" class="hover:text-indigo-600">Privacy Policy</a>
            <span>&bull;</span>
            <a href="#" class="hover:text-indigo-600">Terms of Service</a>
        </div>
    </footer>
</div>

<script>
    let currentStep = 1;
    let selectedRoom = "";
    let roomPrice = 0;
    let timerInterval = null;
    let secondsLeft = 600; // 10 minutes

    function goToStep(step) {
        // Update Nav UI
        document.querySelectorAll('.step-dot').forEach((dot, idx) => {
            const dotStep = idx + 1;
            if (dotStep < step) {
                dot.classList.remove('bg-indigo-600', 'text-white', 'text-slate-400');
                dot.classList.add('bg-emerald-500', 'text-white');
                dot.innerHTML = `<i class="fa-solid fa-check mr-1"></i> ${dotStep}`;
            } else if (dotStep === step) {
                dot.classList.remove('bg-emerald-500', 'text-slate-400');
                dot.classList.add('bg-indigo-600', 'text-white');
                dot.innerHTML = `${dotStep}. ${getStepName(dotStep)}`;
            } else {
                dot.classList.remove('bg-indigo-600', 'bg-emerald-500', 'text-white');
                dot.classList.add('text-slate-400');
                dot.innerHTML = `${dotStep}. ${getStepName(dotStep)}`;
            }
        });

        // Toggle Panels
        document.querySelectorAll('.step-panel').forEach(panel => panel.classList.remove('active'));
        document.getElementById(`step${step}`).classList.add('active');
        currentStep = step;
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function getStepName(step) {
        return ["Search", "Results", "Review", "Details", "Payment"][step-1];
    }

    function selectProperty(name, price) {
        selectedRoom = name;
        roomPrice = price;
        
        // Update Calculations
        const nights = 3;
        const subtotal = roomPrice * nights;
        const cleaning = 150;
        const vat = (subtotal + cleaning) * 0.15;
        const total = subtotal + cleaning + vat;

        document.getElementById('reviewTitle').innerText = name;
        document.getElementById('finalRoomName').innerText = name;
        document.getElementById('basePriceDisplay').innerText = `R ${subtotal.toLocaleString()}.00`;
        document.getElementById('vatDisplay').innerText = `R ${vat.toLocaleString()}.00`;
        document.getElementById('totalPriceDisplay').innerText = `R ${total.toLocaleString()}.00`;
        document.getElementById('finalTotal').innerText = `R ${total.toLocaleString()}.00`;
        
        // Simple Image Switching for Mockup
        const img = document.getElementById('selectedImg');
        img.src = name.includes('Deluxe') 
            ? "https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?auto=format&fit=crop&q=80&w=300"
            : "https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?auto=format&fit=crop&q=80&w=300";

        goToStep(3);
    }

    function startSoftLock() {
        document.getElementById('holdTimer').classList.remove('hidden');
        if (timerInterval) clearInterval(timerInterval);
        
        secondsLeft = 600;
        timerInterval = setInterval(() => {
            secondsLeft--;
            const mins = Math.floor(secondsLeft / 60);
            const secs = secondsLeft % 60;
            document.getElementById('timerDisplay').innerText = `${mins}:${secs < 10 ? '0' : ''}${secs}`;
            document.getElementById('timerBar').style.width = `${(secondsLeft / 600) * 100}%`;

            if (secondsLeft <= 0) {
                clearInterval(timerInterval);
                alert("Room hold expired. Please restart your search.");
                window.location.reload();
            }
        }, 1000);

        goToStep(4);
    }

    function processPayment() {
        const btn = document.getElementById('payBtn');
        btn.disabled = true;
        btn.innerHTML = `<i class="fa-solid fa-circle-notch animate-spin"></i> Processing...`;
        
        // Simulate API call
        setTimeout(() => {
            document.getElementById('paymentArea').classList.add('hidden');
            document.getElementById('successState').classList.remove('hidden');
            document.getElementById('holdTimer').classList.add('hidden');
            clearInterval(timerInterval);
            
            // Trigger confetti effect mock
            console.log("Payment Confirmed and Calendar Updated.");
        }, 2000);
    }

    // Set default dates
    window.onload = () => {
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('checkInDate').value = today;
        document.getElementById('checkOutDate').value = today;
    };
</script>

</body>
</html>